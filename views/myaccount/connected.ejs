<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">
    <link rel="stylesheet" href="/stylesheets/pico.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>My Account</title>
    <style>
:root:not([data-theme=dark]), [data-theme=light] {
    --nav-background: rgba(255, 255, 255, 0.7);
    --nav-border: rgba(115, 130, 140, 0.2);
}

[data-theme=dark] {
    --nav-background: rgba(16, 24, 30, 0.8);
    --nav-border: rgba(115, 130, 140, 0.2);
}

main .grid > * {
  margin-bottom: var(--spacing);
}
@media (min-width: 992px) {
  main .grid {
    grid-column-gap: var(--spacing);
    grid-template-columns: 25% auto;
  }
}
    </style>
  </head>

  <body>
    <%- include('../header'); -%>

    <main class="container">

      <div>
  
<% if (typeof googleAccount != 'undefined') { %>
        <div>
          <form action="/myaccount/delete" method="post">
            <input type="hidden" name="id" value="<%= googleAccount.id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Disconnect Google</button>
          </form>
        </div>
<% } else { %>
        <div>
          <form action="/myaccount/link" method="post">
            <input type="hidden" name="provider" value="accounts.google.com">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Connect to Google</button>
          </form>
        </div>
<% } %>

<% if (typeof facebookAccount != 'undefined') { %>
        <div>
          <form action="/myaccount/delete" method="post">
            <input type="hidden" name="id" value="<%= facebookAccount.id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Disconnect Facebook</button>
          </form>
        </div>
<% } else { %>
        <div>
          <form action="/myaccount/link" method="post">
            <input type="hidden" name="provider" value="www.facebook.com">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Connect Facebook</button>
          </form>
        </div>
<% } %>

<% if (typeof twitterAccount != 'undefined') { %>
        <div>
          <form action="/myaccount/delete" method="post">
            <input type="hidden" name="id" value="<%= twitterAccount.id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Disconnect Twitter</button>
          </form>
        </div>
<% } else { %>
        <div>
          <form action="/myaccount/link" method="post">
            <input type="hidden" name="provider" value="twitter.com">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="contrast">Connect Twitter</button>
          </form>
        </div>
<% } %>

        <!--<a href="/login/federated/accounts.google.com?action=link" role="button">Connect to Google</a><br/>-->

      </div>
    </main>

  </body>
</html>
